---
// 详情页布局设置
import type { CollectionEntry } from "astro:content";
import "@style/markdown.css";

type Props = CollectionEntry<"blog">["data"];

const { title, heroImage, author } =
	Astro.props;
---
<span class="markdown-detail-wrapper">
<div class="sl-markdown-content">
	<div class="hero-image">
		{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
	</div>
	<main>
		<div class="website-prose mx-auto">
			<div class="title">
				<h1 id="_top">{title}</h1>
				<div>{author}</div>
				<hr />
			</div>
			<slot />
		</div>
	</main>
</div>

<style is:global>
	.markdown-detail-wrapper {
	main {
		width: calc(100% - 2em);
		max-width: 100%;
		margin: 0;
	}
	.hero-image {
		width: 100%;
	}
	.hero-image img {
		display: block;
		margin: 0 auto;
		border-radius: 12px;
		box-shadow: var(--box-shadow);
	}

	.website-prose {
		width: 100%;
		padding: 1.5rem;
		color: rgb(var(--gray-dark));
	}
	.title {
		margin-bottom: 1em;
		padding: 1em 0;
		text-align: center;
		line-height: 1;
	}
	.title h1 {
		margin: 0 0 0.5em 0;
	}
	.date {
		margin-bottom: 0.5em;
		color: rgb(var(--gray));
	}
	.last-updated-on {
		font-style: italic;
	}
}
</style>
