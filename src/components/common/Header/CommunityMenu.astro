---
import {
  HEADER_ACTIVITY_CARD,
  getBlogContentList,
  categoryMap,
  COMMUNITY_MENU_LIST,
} from "../../../constant";
import MenuContainer from "../MenuContainer.astro";
import BlogCardContainer from "../BlogCardContainer.astro";
import MenuList from "../MenuList.astro";

const [comt, resources] = COMMUNITY_MENU_LIST;

const { blogDescrip, blogImgs, posts } = await getBlogContentList(
  HEADER_ACTIVITY_CARD
) as any;
---

<MenuContainer>
  <MenuList menuData={{ comt, resources }} slot="left" />
  <BlogCardContainer
    blogData={{ categoryMap, blogDescrip, blogImgs, posts }}
    slot="right"
  />
</MenuContainer>
