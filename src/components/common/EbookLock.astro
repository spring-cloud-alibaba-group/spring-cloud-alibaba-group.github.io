---
import { LinkButton } from "@serverless-cd/goat-ui"
import { SITE } from "@utils/config";
import { useTranslations } from "@i18n/util";
const t = useTranslations(Astro);
---

<div class="container w-full">
    <div class="content">
        <p class="text-gray-01 text-3xl">
            {t('commmon.ebook.click.download')}<br /> {t('commmon.ebook.complete.get')}<br /> {t('commmon.ebook.enjoy.read')}
        </p>
        <LinkButton  
            href={SITE.downloadEbooks}    
            text={t('commmon.ebook.click.download')}    
            theme="secondary"    
            textTheme="neutral"
            classes={{
                container:"rounded-lg",
                title: "font-medium"
            }}
        />
    </div>
</div>

<style>
    .container {
        background-image: url("https://img.alicdn.com/imgextra/i1/O1CN013hvJlN1pvKNo31b1W_!!6000000005422-0-tps-1600-800.jpg");
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding-left: 3rem;
        height: 400px;

        p {
            line-height: 3rem;
            margin: 1.75rem 0;
        }
    }

    @media (max-width: 50rem) {
        .container {
            height: 200px;
            padding-left: 1.5rem;
            p {
                font-size: 16px;
                font-weight: 500;
                line-height: 24px;
                margin: 1rem 0;
            }
        }
    }
</style>
